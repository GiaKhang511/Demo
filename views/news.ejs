<!-- Trang danh sách tin tức (views/news.ejs) -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Danh sách tin tức</title>

  <!-- Đường dẫn đến file CSS (nếu có) -->
  <link rel="stylesheet" href="/styles.css">

  <style>
    /* CSS trực tiếp vào trang danh sách tin tức */
    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      margin: 0;
      padding: 0;
    }

    header {
      background-color: #333;
      color: #fff;
      padding: 20px;
      text-align: center;
    }

    header h1 {
      font-size: 36px;
      margin: 0;
    }

    nav ul {
      list-style-type: none;
      padding: 0;
    }

    nav ul li {
      display: inline;
      margin-right: 20px;
    }

    nav a {
      text-decoration: none;
      color: #fff;
      font-weight: bold;
      font-size: 16px;
    }

    .news-list ul {
      list-style-type: none;
      padding: 0;
    }

    .news-list li {
      margin-bottom: 20px;
      border-bottom: 1px solid #ccc;
      padding-bottom: 10px;
      background-color: #fff;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .news-list h3 {
      margin: 0;
      padding: 10px;
      background-color: #333;
      color: #fff;
    }

    .news-list p {
      margin-top: 10px;
      padding: 10px;
    }
  </style>
</head>
<body>
    <header>
      <h1>Danh sách tin tức</h1>
      <nav>
        <ul>
          <li><a href="/">Trang chủ</a></li>
          <li><a href="/addNews">Thêm tin tức</a></li>
        </ul>
      </nav>
    </header>
    <main>
      <section class="news-list">
        <h2>Danh sách tin tức</h2>
        <ul>
          <% news.forEach(function(article) { %>
            <li>
              <h3><a href="/news/<%= article.id %>"><%= article.title %></a></h3>
              <p><%= article.content %></p>
              <a href="/deleteNews/<%= article.id %>">Xóa</a> <!-- Thêm nút xóa -->
            </li>
          <% }); %>
        </ul>
      </section>
    </main>
    <footer>
      <p>&copy; 2023 Tin Tức</p>
    </footer>
  </body>
</html>
